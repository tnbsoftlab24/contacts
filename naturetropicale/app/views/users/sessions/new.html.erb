<div class="container ">
    <div class="row form-height">
      <div class="col-10 col-sm-8 col-md-7 col-lg-6 col-xl-5 mx-auto form-box">
        <div class="brand-logo">
          <%= image_pack_tag "logo.png", :class=>"" %>
          <%# <img src="../../assets/images/logo.svg"> %>
        </div>
        <h4>Hello! On y va ðŸ˜Ž</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class:'pt-3'}) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg", placeholder:"Courriel/Email" %>
          </div>
          <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg", placeholder:"Mot de passe" %>
          </div>
          <div class="form-check">
            <label class="form-check-label text-muted">
              <%= f.check_box :remember_me, class:"form-check-input" %> Me garder connecter
            </label>
          </div>
          <div class="mt-3">
            <%= f.submit "SE CONNECTER",class:"btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"%>
          </div>

          <div class="my-2 text-center">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name), :class => "auth-link text-black" %><br />
            <% end %>
          </div>

          <div class="my-2 text-center">
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Je n'ai pas reÃ§u le mail de confirmation?", new_confirmation_path(resource_name) %><br />
            <% end %>
          </div>
          <!--<div class="mb-2">
            <button type="button" class="btn btn-block btn-facebook auth-form-btn">
              <i class="mdi mdi-facebook mr-2"></i>Connect using facebook </button>
          </div>-->

          <div class="text-center mt-4 font-weight-light"> Vous n'avez pas de compte? 
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "S'inscrire", new_registration_path(resource_name),class:"text-primary"%><br />
          <% end %>
          
          </div>
        <% end %>
      </div>
    </div>
</div>
      
       

