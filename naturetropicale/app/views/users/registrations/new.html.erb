<div class="container" id="registration">
  <div class="row form-height">
    <div class="col-10 col-sm-8 col-md-7 col-lg-6 col-xl-5 mx-auto form-box">
        <div class="brand-logo">
            <%= image_pack_tag "logo.png" %>
        </div>
        <h4> Etes vous nouveau?</h4>
        <h6 class="font-weight-light">S'incrire est facile !ðŸ˜Š</h6>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class:'pt-3'}) do |f| %>
          <% if resource.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(resource.errors.count, "erreur(s)") %> empÃªchent de sauvegarder votre compte:</h2>
              <ul>
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="d-flex justify-content-between mb-3">
            <%= f.radio_button :role, 'worker', id:"worker", class:"d-none", :checked => true %> <%= label :enterprise, 'EmployÃ©',for:"worker" %>
            <%= f.radio_button :role, 'enterprise', id:"enterprise", class:"d-none" %>  <%= label :enterprise, 'Entreprise', for:"enterprise" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg", placeholder:"Courriel/Email" %>
          </div>
          <div class="form-group">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg", placeholder:"mot de passe" %>
          </div>
           <% if @minimum_password_length %>
              <em class="notice-password">(<%= @minimum_password_length %> charactÃ¨res minimum)</em>
           <% end %><br />
          <div class="form-group">
              <%=f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg", placeholder:"Confirmez mot de passe" %>
          </div>

          <p class="card-title mt-5">Selectionnez votre TimeZone</p>
          <div class="row">
            <div class="form-group col-md-12">
              <%= f.time_zone_select :time_zone, nil, {:default => "Eastern Time (US & Canada)"}, {:class => 'form-control'} %>
            </div>
          </div>

          <div class="mb-4">
            <div class="form-check">
              <label class="form-check-label text-muted">
                <%= f.check_box :terms_conditions, class:"form-check-input" %> J'accepte les Termes & Conditions 
            </div>
          </div>
          <div class="mt-3">
              <%= f.submit "S'inscrire",class:"btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"%>
          </div>
          <%#= link_to "Se connecter avec facebook", user_facebook_omniauth_authorize_path, class:"btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" %>
          <div class="text-center mt-4 font-weight-light"> Avez-vous dÃ©jÃ  un compte?
            <%- if controller_name != 'sessions' %>
              <%= link_to "Se connecter", new_session_path(resource_name),class:"text-primary" %><br />
            <% end %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
