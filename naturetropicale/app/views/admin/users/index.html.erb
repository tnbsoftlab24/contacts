
<div class="form-box mb-30">
  <h2 class="h4 pd-20">Liste des utilisateurs</h2>
  <%= form_tag admin_users_path, :method => 'get', :id => "users_search" do %>
    <div class="row justify-content-between">
      <div class="my-2 col-md-5 ">
        <%= text_field_tag :search, params[:search],class:"form-control w-100", placeholder: 'Rechercher un email' %>
        <div class="d-none">
          <%= submit_tag "Recherche", :nom => nil %>
        </div>
      </div>
      <div class="text-right my-1"><%= link_to "Profiles Utilisateurs", profiles_path, class:"btn btn-primary text-light" %></div>
  <% end %>
   </div>
  <div id="users"><%= render 'users' %></div>


<script>
   $(function() {
        $("#users th a, #users .pagination a").on("click", '#search', function() {
            $.getScript(this.href);
            return false;
        });
        $("#users_search input").keyup(function() {
            $.get($("#users_search").attr("action"), $("#users_search").serialize(), null, "script");
            return false;
        });
    });
</script>


