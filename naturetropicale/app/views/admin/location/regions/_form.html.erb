<div class="container">
  <div class="row">
    <div class="col-10 col-sm-8 col-md-7 col-lg-7 col-xl-6 mx-auto form-box">
     <%= simple_form_for(@admin_location_region) do |f| %>
         <%= f.error_notification %>
         <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name,:label => "Nom", input_html:{ :class => 'form-control' } %>
        </div>

        <div class="form-inputs">
          <%= f.label :province %>
          <%= f.collection_select :province_id, Admin::Location::Province.all, :id, :name, {include_blank: "Choisir une province..."}, {class: "form-control"} %>
        </div>

        <div class="form-actions">
          <%= f.submit "Enregistrer", class:"btn btn-block btn-lg mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>