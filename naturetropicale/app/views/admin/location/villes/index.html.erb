<div class="px-3 my-4 text-right" style="">
    <%= link_to 'Créer une villes', new_admin_location_ville_path, class: "btn-primary text-light btn-lg" %>      
  </div>
<div class="card-box mb-30">
  <h2 class="h4 pd-20">Liste des Villes</h2>
   <table id="ville" class="table table-responsive-sm display">
      <thead>
          <tr>
              <th>Villes</th>
              <th>Régions</th>
              <th>Provinces</th>
              <th colspan="3" class="">Actions</th>
              <th></th>
              <th></th>
          </tr>
      </thead>
      <tbody>
        <% @admin_location_villes.each do |admin_location_ville| %>
          <tr>
            <td><%= admin_location_ville.name %></td>
            <td><%= admin_location_ville.region.name %></td>
            <td><%= admin_location_ville.region.province.name %></td>
            <td><%= link_to 'Modifier', edit_admin_location_ville_path(admin_location_ville) %></td>
            <td><%= link_to 'Supprimer', admin_location_ville, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
   </table>
</div>
<br>



<script>

  $(document).ready(function() {
    $('#ville').DataTable( {
        "paging":   true,
        "ordering": false,
        "info":     true,
        "language": {
          "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
      }
    });
  });
</script>
