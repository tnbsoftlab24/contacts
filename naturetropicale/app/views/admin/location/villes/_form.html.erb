<div class="container">
  <div class="row">
    <div class="col-10 col-sm-8 col-md-7 col-lg-7 col-xl-6 mx-auto form-box">
      <%= form_with(model: admin_location_ville, local: true) do |form| %>
        <% if admin_location_ville.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(admin_location_ville.errors.count, "erreurs") %> empéchent villes d'être sauvegardé:</h2>

            <ul>
              <% admin_location_ville.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :nom %>
          <%= form.text_field :name, {class: "form-control"} %>
        </div>

        <div class="field">
          <%= form.label :region_id %>
          <%= form.collection_select :region_id, Admin::Location::Region.order(:name), :id, :name, {include_blank: "Choisir une categorie..."}, {class: "form-control"} %>
        </div>

        <div class="actions">
          <%= form.submit "Enregistrer", class:"btn btn-block btn-lg mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>