<div class="container">
  <div class="card-box">
    <h2 class="h4 pd-20">Mes Soumissions</h2>
    <table class="data-table table-responsive-sm table nowrap">
      <thead>
        <tr>
          <th>Poste</th>
          <th>Information complementaire</th>
          <th>status</th>
          <th colspan="3">Details</th>
        </tr>
      </thead>

      <tbody>
        <% @proposals.each do |proposal| %>
          <tr>
            <td><%= link_to proposal.job.admin_job_category.title, job_path(proposal.job.id), class: "text-primary btn-lg" %> </td>
            <td><%=  truncate(proposal.information_complementaire, length: 70) %></td>
            <td><%= proposal.status %></td>
            <td>
              <td><%= link_to 'Voir', job_path(proposal.job.id) %></td>
            </td>
            <!--<td><%= link_to 'Edit', edit_proposal_path(proposal) %></td>
            <td><%= link_to 'Destroy', proposal, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
