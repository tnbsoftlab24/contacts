 <table id="profiles" class="data-table table-responsive-sm table nowrap" style="width:100%">
      <thead>
          <tr>
            <th>Image</th>
            <th>Nom</th>
            <th>Rôle</th>
            <th>Date de création</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
      </thead>
      <tbody>
        <% @profiles_unconfirmed.each do |profile| %>
          <tr>
            <% if !profile.nil? %>
              <td class="table-plus">
              <% if profile.photo.attached? %>
                <%= image_tag profile.photo %>
                <%else%>
                <%=  image_pack_tag 'login-img.png' %>
              <%end%>
              </td>
              <% if profile.user.enterprise? %>
              <td> <%= profile.nom_societe %></td>
              <% else%>
                <td> <%= profile.nom %> <%= profile.prenom %></td>
              <% end %>
              <td class="">
                <%= form_with(model: @profile, url: update_users_roles_admin_user_path(profile.id), :html => {class: "form-inline", :method => :post}) do |f| %>
                  <%= f.hidden_field :id, :value=> profile.id %>
                  <div class="form-inputs">
                    <%= f.select :role, options_for_select(User.roles.map { |key, value| [key.humanize, key]}, {selected: profile.user.role}),{},{class: "form-control"} %>
                  </div>
                  <div class="form-actions">
                    <%= f.submit "mettre à jour", class:"btn btn-block btn-sm mx-2" %>
                  </div>
                  <div>
                    <% if profile.user.worker? %>
                      <span class="ml-3"><%= link_to "Verifier Cv ", profile.cv if profile.cv.attached? %></span>
                    <% end %>
                  </div>
                <% end %>
              </td>
              <td><%= profile.created_at %></td>
            
              <td class="align-items-center">
                <label class="badge badge-danger">en cours</label>
              </td>
              
              <td class="text-center">
                <div class="dropdown">
                  <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                      <i class="fas fa-ellipsis-h"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                  <%= link_to profile_path(profile.id), class:"dropdown-item" do  %>
                    <i class="fas fa-eye fa-1x mx-1 text-dark"></i> Voir
                  <%end%>
                  <%= link_to  edit_profile_path(profile.id), class:"dropdown-item" do %>
                    <i class="far fa-edit fa-1x mx-1 text-dark"></i> Modifier
                  <%end%>
                  <%= link_to profile, method: :delete, data: { confirm: 'Etes vous sure?' }  , class:"dropdown-item" do  %>
                    <i class="far fa-trash-alt  fa-1x mx-1 text-dark"></i> Supprimer
                  <%end%>
                  </div>
                </div>
              </td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>