<%= form_for contact, html: { class: "contact form" } do |f| %>
  <% if contact.errors.any? %>
    <div class="error-message">
      <ul>
          <% contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
       <div class="col-md-12"> 
        <%= f.label :first_name, class: 'form-label' %>
        <%= f.text_field :first_name, palceholder:"first name", class:"form-control"  %>
       </div>
       <div class="col-md-12"> 
        <%= f.label :last_name, class: 'form-label' %>
        <%= f.text_field  :last_name, class:"form-control"  %>
       </div>
       <div class="col-md-12"> 
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field  :email, class:"form-control"  %>
       </div>
       <div class="col-md-12"> 
        <%= f.label :phone_number, class: 'form-label' %>
        <%= f.number_field  :phone_number, class:"form-control"  %>
       </div>
    </div>
  </div>

  

  

  

  

  <%= link_to "Cancel", contacts_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>