<%= form_for contact, html: { class: "quote form" } do |f| %>
  <% if contact.errors.any? %>
    <div class="error-message">
      <%= contact.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.label :first_name, class: 'form-label' %>
  <%= f.text_field :first_name, palceholder:"first name", class:"form-control"  %>

  <%= f.label :last_name, class: 'form-label' %>
  <%= f.text_field  :last_name, class:"form-control"  %>

  <%= f.label :email, class: 'form-label' %>
  <%= f.email_field  :email, class:"form-control"  %>

  <%= f.label :phone_number, class: 'form-label' %>
  <%= f.number_field  :phone_number, class:"form-control"  %>

  <%= link_to "Cancel", contacts_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>